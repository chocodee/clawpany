# Client-scoped Railway env vars
# Copy into Railway project settings for each client.

# Core
RUST_LOG=info
APP_ENV=production

# Railway service override (optional)
RAILWAY_SERVICE_NAME=bnet

# Database (project-specific)
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DB
REDIS_URL=redis://USER:PASSWORD@HOST:PORT

# GitHub delivery (client repo only)
GITHUB_REPO=org/client-repo
GITHUB_TOKEN=replace_with_scoped_token

# Signal (optional per client)
SIGNAL_NUMBER=+15555555555
SIGNAL_DEVICE_ID=1
SIGNAL_API_TOKEN=replace_with_token

# Email (optional per client)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=bot@example.com
SMTP_PASS=replace_with_password
EMAIL_FROM=bot@example.com
EMAIL_TO=client@example.com
